@model EMS.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-warning text-dark py-3">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-pen-to-square me-2"></i> Edit Course</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CourseCode" class="form-label fw-bold text-muted">Course Code</label>
                            <input asp-for="CourseCode" class="form-control" />
                            <span asp-validation-for="CourseCode" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Credits" class="form-label fw-bold text-muted">Credits</label>
                            <input asp-for="Credits" class="form-control" />
                            <span asp-validation-for="Credits" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold text-muted">Course Title</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartmentId" class="form-label fw-bold text-muted">Department</label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId" id="DepartmentId">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SemesterId" class="form-label fw-bold text-muted">Semester</label>
                            <select asp-for="SemesterId" class="form-select" asp-items="ViewBag.SemesterId">
                                <option value="">-- Select Semester --</option>
                            </select>
                            <span asp-validation-for="SemesterId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="TeacherId" class="form-label fw-bold text-muted">Assign Teacher</label>
                        <select asp-for="TeacherId" class="form-select" id="TeacherId">
                            <option value="">-- Select Teacher --</option>
                        </select>
                        <span asp-validation-for="TeacherId" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-light text-muted border me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-warning fw-bold px-4">
                            <i class="fa-solid fa-save me-2"></i> Update
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            var selectedTeacher = '@Model.TeacherId';

            function loadTeachers(deptId, selectedId) {
                var teacherSelect = $("#TeacherId");
                teacherSelect.empty().append('<option value="">-- Select Teacher --</option>');

                if (deptId) {
                    $.ajax({
                        url: '/Courses/GetTeachersByDepartment',
                        type: 'GET',
                        data: { departmentId: deptId },
                        success: function (data) {
                            $.each(data, function (i, teacher) {
                                var option = $('<option></option>').val(teacher.id).html(teacher.name);
                                if (teacher.id === selectedId) option.prop('selected', true);
                                teacherSelect.append(option);
                            });
                        }
                    });
                }
            }

            var initialDept = $("#DepartmentId").val();
            if (initialDept) loadTeachers(initialDept, selectedTeacher);

            $("#DepartmentId").change(function () {
                loadTeachers($(this).val(), null);
            });
        });
    </script>
}