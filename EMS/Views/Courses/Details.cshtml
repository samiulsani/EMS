@model EMS.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-info text-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-circle-info me-2"></i> Course Details</h5>
                <a asp-action="Index" class="btn btn-sm btn-light text-info fw-bold"><i class="fa-solid fa-arrow-left me-1"></i> Back</a>
            </div>
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <h2 class="text-primary fw-bold">@Model.Title</h2>
                    <span class="badge bg-secondary fs-6">@Model.CourseCode</span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light h-100">
                            <small class="text-muted fw-bold text-uppercase">Department</small>
                            <div class="fw-bold text-dark">@Model.Department?.Name</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light h-100">
                            <small class="text-muted fw-bold text-uppercase">Semester</small>
                            <div class="fw-bold text-dark">@Model.Semester?.Name</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light h-100">
                            <small class="text-muted fw-bold text-uppercase">Credits</small>
                            <div class="fw-bold text-dark">@Model.Credits</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light h-100">
                            <small class="text-muted fw-bold text-uppercase">Assigned Teacher</small>
                            @if (Model.Teacher != null)
                            {
                                <div class="fw-bold text-success">@Model.Teacher.FirstName @Model.Teacher.LastName</div>
                            }
                            else
                            {
                                <div class="text-muted fst-italic">Not Assigned</div>
                            }
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning fw-bold px-4">
                        <i class="fa-solid fa-pen me-2"></i> Edit Course
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>