@model EMS.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger mt-4">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-triangle-exclamation me-2"></i> Delete Course</h5>
            </div>
            <div class="card-body p-4 text-center">

                <div class="text-danger mb-3">
                    <i class="fa-solid fa-trash-can fa-4x opacity-50"></i>
                </div>

                <h4 class="text-dark fw-bold mb-2">Are you sure?</h4>
                <p class="text-muted mb-4">
                    You are about to delete the course <strong>"@Model.Title"</strong>. <br />
                    This will remove all exams, results, and attendance records associated with this course!
                </p>

                <div class="bg-light p-3 rounded text-start mb-4 border">
                    <div class="row mb-1">
                        <div class="col-4 text-muted small fw-bold">Code:</div>
                        <div class="col-8 fw-bold">@Model.CourseCode</div>
                    </div>
                    <div class="row mb-1">
                        <div class="col-4 text-muted small fw-bold">Title:</div>
                        <div class="col-8">@Model.Title</div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-muted small fw-bold">Department:</div>
                        <div class="col-8">@Model.Department?.Name</div>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Index" class="btn btn-light border px-4">Cancel</a>
                        <button type="submit" class="btn btn-danger fw-bold px-4">
                            Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>