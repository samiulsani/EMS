@model EMS.Models.Assignment

@{
    ViewData["Title"] = "Create Assignment";
    Layout = "_DashboardLayout";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-file-circle-plus me-2"></i> Create New Assignment</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2"></div>

                    <div class="mb-3">
                        <label asp-for="CourseId" class="form-label fw-bold text-muted">Select Course</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-book"></i></span>
                            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId">
                                <option value="">-- Select Course --</option>
                            </select>
                        </div>
                        <span asp-validation-for="CourseId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold text-muted">Assignment Title</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-heading"></i></span>
                            <input asp-for="Title" class="form-control" placeholder="e.g. Assignment 1: OOP Concepts" />
                        </div>
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold text-muted">Instructions / Questions</label>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Write detailed instructions here..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Deadline" class="form-label fw-bold text-muted">Submission Deadline</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-regular fa-clock"></i></span>
                                <input asp-for="Deadline" class="form-control" type="datetime-local" />
                            </div>
                            <span asp-validation-for="Deadline" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="TotalMarks" class="form-label fw-bold text-muted">Total Marks</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-star-half-stroke"></i></span>
                                <input asp-for="TotalMarks" class="form-control" type="number" />
                            </div>
                            <span asp-validation-for="TotalMarks" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-light border px-4 me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary fw-bold px-4">
                            <i class="fa-solid fa-check me-2"></i> Publish
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}