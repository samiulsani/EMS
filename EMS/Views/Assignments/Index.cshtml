@model IEnumerable<EMS.Models.Assignment>

@{
    ViewData["Title"] = "My Assignments";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="fa-solid fa-clipboard-list"></i> My Assignments</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Create New
    </a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th>Title</th>
                    <th>Course</th>
                    <th>Deadline</th>
                    <th>Marks</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@item.Title</td>
                            <td>
                                <span class="fw-bold">@item.Course.CourseCode</span><br />
                                <small class="text-muted">@item.Course.Semester?.Name</small>
                            </td>
                            <td>
                                @item.Deadline.ToString("dd MMM yyyy, h:mm tt")
                                @if (item.Deadline < DateTime.Now)
                                {
                                    <span class="badge bg-danger ms-1">Closed</span>
                                }
                                else
                                {
                                    <span class="badge bg-success ms-1">Active</span>
                                }
                            </td>
                            <td>@item.TotalMarks</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Submissions" asp-route-id="@item.Id" class="btn btn-outline-info" title="View Submissions">
                                        <i class="fa-solid fa-folder-open"></i> Submissions
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Edit">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-5">No assignments created yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>