@model IEnumerable<EMS.Models.AssignmentSubmission>

@{
    ViewData["Title"] = "Submissions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="fa-solid fa-file-arrow-down"></i> Submissions: @ViewBag.AssignmentTitle</h2>
    <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Back to List</a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
    <thead class="bg-light">
        <tr>
            <th>Student Info</th> <th>Date</th>
            <th>File</th>
            <th>Marks</th>
            <th class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="fw-bold">@item.Student.FirstName @item.Student.LastName</div>
                    <small class="text-muted">ID: @(item.Student.StudentProfile?.StudentRoll ?? "N/A")</small>
                </td>
                <td>@item.SubmissionDate.ToString("dd MMM, h:mm tt")</td>
                <td>
                    <a href="@item.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                        <i class="fa-solid fa-download"></i> View File
                    </a>
                </td>
                <td>
                    @if(item.MarksObtained != null) 
                    { 
                        <span class="badge bg-success fs-6">@item.MarksObtained / @ViewBag.TotalMarks</span> 
                    } 
                    else 
                    { 
                        <span class="badge bg-warning text-dark">Pending</span> 
                    }
                </td>
                <td class="text-end">
                    <a asp-action="GradeSubmission" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                        <i class="fa-solid fa-check-to-slot"></i> Grade
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</div>