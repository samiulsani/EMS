@model EMS.Models.AssignmentSubmission

@{
    ViewData["Title"] = "Grade Submission";
    Layout = "_DashboardLayout";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fa-solid fa-pen-ruler"></i> Grade Submission</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-secondary">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Student:</strong> @Model.Student.FirstName @Model.Student.LastName <br />
                            <strong>ID:</strong> @(Model.Student.StudentProfile?.StudentRoll ?? "N/A")
                        </div>
                        <div class="col-md-6 text-end">
                            <strong>Assignment:</strong> @Model.Assignment.Title <br />
                            <strong>Total Marks:</strong> @Model.Assignment.TotalMarks
                        </div>
                    </div>
                    <hr />
                    <div class="text-center">
                        <a href="@Model.FileUrl" target="_blank" class="btn btn-outline-primary">
                            <i class="fa-solid fa-file-pdf"></i> View/Download Student's File
                        </a>
                    </div>
                </div>

                <form asp-action="GradeSubmission" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Marks Awarded</label>
                        <div class="input-group">
                            <input type="number" name="marks" step="0.5" min="0" max="@Model.Assignment.TotalMarks"
                                   class="form-control" value="@(Model.MarksObtained ?? 0)" required />
                            <span class="input-group-text">/ @Model.Assignment.TotalMarks</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Feedback / Comments</label>
                        <textarea name="feedback" class="form-control" rows="4" placeholder="Optional feedback for the student...">@Model.TeacherFeedback</textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-save"></i> Save Grade
                        </button>
                        <a asp-action="Submissions" asp-route-id="@Model.AssignmentId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4 shadow-sm border-info">
    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fa-solid fa-robot"></i> AI Analysis Report</h5>
        <span class="badge bg-white text-info">Powered by Gemini</span>
    </div>
    <div class="card-body">
        <div class="row text-center">

            <div class="col-md-4 border-end">
                <h6 class="text-muted">Suggested Marks</h6>
                <div class="display-6 fw-bold text-primary">@Model.AIMarks</div>
                <small class="text-muted">out of @Model.Assignment.TotalMarks</small>
            </div>

            <div class="col-md-4 border-end">
                <h6 class="text-muted">AI Content Probability</h6>

                @if (Model.AIPlagiarismScore >= 80)
                {
                    <div class="display-6 fw-bold text-danger">@Model.AIPlagiarismScore%</div>
                    <span class="badge bg-danger">High Risk! 🚨</span>
                }
                else if (Model.AIPlagiarismScore >= 50)
                {
                    <div class="display-6 fw-bold text-warning">@Model.AIPlagiarismScore%</div>
                    <span class="badge bg-warning text-dark">Moderate</span>
                }
                else
                {
                    <div class="display-6 fw-bold text-success">@Model.AIPlagiarismScore%</div>
                    <span class="badge bg-success">Original Content</span>
                }
            </div>

            <div class="col-md-4 text-start ps-4">
                <h6 class="text-muted">AI Feedback:</h6>
                <p class="fst-italic small">"@Model.AIReview"</p>

                <button type="button" class="btn btn-sm btn-outline-dark w-100 mt-2" onclick="applyAIMarks()">
                    <i class="fa-solid fa-wand-magic-sparkles"></i> Apply Suggestion
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function applyAIMarks() {
        document.querySelector('input[name="marks"]').value = '@Model.AIMarks';
        document.querySelector('textarea[name="feedback"]').value = '@Model.AIReview';
    }
</script>