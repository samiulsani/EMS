@model IEnumerable<EMS.Models.ViewModels.TeacherEvaluationViewModel>

@{
    ViewData["Title"] = "Teacher Evaluation";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-star-half-stroke me-2"></i> Teacher Evaluation</h2>
        <p class="text-muted mb-0">Provide anonymous feedback for your instructors.</p>
    </div>
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-light rounded-circle p-3 me-3 text-primary">
                        <i class="fa-solid fa-chalkboard-user fa-2x"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-1">@item.TeacherName</h5>
                        <p class="text-muted small mb-0">@item.CourseCode - @item.CourseTitle</p>
                    </div>
                    <div>
                        @if (item.IsRated)
                        {
                            <button class="btn btn-success btn-sm disabled opacity-75">
                                <i class="fa-solid fa-check me-1"></i> Rated
                            </button>
                        }
                        else
                        {
                            <a asp-action="RateTeacher" asp-route-courseId="@item.CourseId" class="btn btn-outline-primary btn-sm fw-bold">
                                Rate Now
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <div class="col-12 text-center py-5 text-muted">
            <i class="fa-solid fa-user-slash fa-3x mb-3 opacity-25"></i>
            <h5>No teachers found to evaluate.</h5>
        </div>
    }
</div>