@model IEnumerable<EMS.Models.ClassRoutine>

@{
    ViewData["Title"] = "Class Routine";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-calendar-days me-2"></i> Class Routine</h2>
        <p class="text-muted mb-0">Manage weekly class schedules.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary fw-bold px-4 shadow-sm">
        <i class="fa-solid fa-plus me-2"></i> Add New Routine
    </a>
</div>

<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white py-3">
        <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-list me-2"></i> Routine List</h6>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Day & Time</th>
                    <th>Course Info</th>
                    <th>Room No</th>
                    <th>Instructor</th>
                    <th class="text-end pe-4">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@item.Day</div>
                                <small class="text-muted">
                                    @DateTime.Today.Add(item.StartTime).ToString("hh:mm tt") -
                                    @DateTime.Today.Add(item.EndTime).ToString("hh:mm tt")
                                </small>
                            </td>
                            <td>
                                <div class="fw-bold text-primary">@item.Course?.CourseCode</div>
                                <small class="text-muted">@item.Course?.Title</small>
                                <div class="d-flex gap-2 mt-1">
                                    <span class="badge bg-light text-dark border">@item.Course?.Department?.Name</span>
                                    <span class="badge bg-light text-dark border">@item.Course?.Semester?.Name</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-warning text-dark">@item.RoomNo</span>
                            </td>
                            <td>
                                @if (item.Course?.Teacher != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle me-2 p-1"><i class="fa-solid fa-user-tie text-secondary"></i></div>
                                        <span>@item.Course.Teacher.FirstName @item.Course.Teacher.LastName</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">TBA</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Remove">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <i class="fa-regular fa-calendar-xmark fa-3x mb-3 opacity-25"></i>
                            <h5 class="fw-bold">No routine found</h5>
                            <p class="mb-0">Add a new class schedule to get started.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>