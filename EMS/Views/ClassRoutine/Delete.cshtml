@model EMS.Models.ClassRoutine
@{
    ViewData["Title"] = "Delete Routine";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger mt-5">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-trash-can me-2"></i> Remove Class Schedule</h5>
            </div>
            <div class="card-body p-4 text-center">
                <h4 class="text-dark fw-bold mb-3">Are you sure?</h4>
                <p class="text-muted">You are about to remove the class for <strong>@Model.Course?.CourseCode</strong> on <strong>@Model.Day</strong>.</p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-light border px-4">Cancel</a>
                        <button type="submit" class="btn btn-danger fw-bold px-4">Confirm Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>