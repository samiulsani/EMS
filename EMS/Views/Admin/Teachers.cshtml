@model IEnumerable<EMS.Models.ApplicationUser>

@{
    ViewData["Title"] = "Teachers List";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Teachers</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="CreateUser" class="btn btn-sm btn-primary">
            <i class="fa-solid fa-plus"></i> Add New Teacher
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Designation</th>
                <th>Department</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.FirstName @teacher.LastName</td>
                    <td><span class="badge bg-info text-dark">@teacher.TeacherProfile?.Designation</span></td>
                    <td>@teacher.TeacherProfile?.Department?.Name</td>
                    <td>@teacher.Email</td>
                    <td>@teacher.PhoneNumber</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-outline-info" title="Details"><i class="fa-solid fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-outline-warning" title="Edit"><i class="fa-solid fa-pen"></i></a>
                            <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-outline-danger" title="Delete"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>