@model IEnumerable<EMS.Models.ViewModels.TeacherEvaluationReportViewModel>

@{
    ViewData["Title"] = "Teacher Evaluation Report";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-chart-simple me-2"></i> Teacher Performance</h2>
        <p class="text-muted mb-0">Evaluation report based on student feedback.</p>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Teacher Name</th>
                    <th>Department</th>
                    <th class="text-center">Total Reviews</th>
                    <th class="text-center">Avg. Rating</th>
                    <th class="text-end pe-4">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@item.TeacherName</div>
                                <small class="text-muted">@item.Designation</small>
                            </td>
                            <td><span class="badge bg-light text-dark border">@item.Department</span></td>
                            <td class="text-center">@item.TotalReviews</td>
                            <td class="text-center">
                                @if (item.TotalReviews > 0)
                                {
                                    <span class="badge @(item.AverageRating >= 4 ? "bg-success" : item.AverageRating >= 3 ? "bg-warning text-dark" : "bg-danger") fs-6">
                                        @item.AverageRating <i class="fa-solid fa-star ms-1" style="font-size: 0.7rem;"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted small">No Data</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="EvaluationDetails" asp-route-id="@item.TeacherId" class="btn btn-sm btn-outline-primary shadow-sm">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">No evaluations found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>