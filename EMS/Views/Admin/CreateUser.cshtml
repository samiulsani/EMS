@model EMS.Models.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-user-plus me-2"></i> Create New User</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="CreateUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2" role="alert"></div>
                    <input type="hidden" name="source" value="@ViewData["Source"]" />

                    <h6 class="text-muted text-uppercase fw-bold mb-3 border-bottom pb-2">Account Info</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-bold text-muted small">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label fw-bold text-muted small">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="******" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold text-muted small">Confirm Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-lock"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="******" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Role" class="form-label fw-bold text-muted small">User Role</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-user-tag"></i></span>
                                <select asp-for="Role" asp-items="@Model.RoleList" class="form-select" id="roleSelector">
                                    <option value="">-- Select Role --</option>
                                </select>
                            </div>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>
                    </div>

                    <h6 class="text-muted text-uppercase fw-bold mb-3 border-bottom pb-2 mt-3">Personal Info</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold text-muted small">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold text-muted small">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold text-muted small">Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-phone"></i></span>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartmentId" class="form-label fw-bold text-muted small">Department</label>
                            <select asp-for="DepartmentId" asp-items="@Model.DepartmentList" class="form-select">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div id="teacherSection" style="display: none;" class="bg-light p-3 rounded border mt-3">
                        <h6 class="text-info fw-bold mb-3"><i class="fa-solid fa-chalkboard-user me-2"></i> Teacher Details</h6>
                        <div class="mb-3">
                            <label asp-for="Designation" class="form-label small fw-bold">Designation</label>
                            <input asp-for="Designation" class="form-control" placeholder="e.g. Lecturer" />
                            <span asp-validation-for="Designation" class="text-danger small"></span>
                        </div>
                    </div>

                    <div id="studentSection" style="display: none;" class="bg-light p-3 rounded border mt-3">
                        <h6 class="text-success fw-bold mb-3"><i class="fa-solid fa-user-graduate me-2"></i> Student Details</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StudentRoll" class="form-label small fw-bold">Roll No</label>
                                <input asp-for="StudentRoll" class="form-control" />
                                <span asp-validation-for="StudentRoll" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegistrationNo" class="form-label small fw-bold">Registration No</label>
                                <input asp-for="RegistrationNo" class="form-control" />
                                <span asp-validation-for="RegistrationNo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Session" class="form-label small fw-bold">Session</label>
                                <input asp-for="Session" class="form-control" />
                                <span asp-validation-for="Session" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="SemesterId" class="form-label small fw-bold">Semester</label>
                                <select asp-for="SemesterId" asp-items="@Model.SemesterList" class="form-select">
                                    <option value="">-- Select Semester --</option>
                                </select>
                                <span asp-validation-for="SemesterId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label small fw-bold">Date of Birth</label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BloodGroup" class="form-label small fw-bold">Blood Group</label>
                                <input asp-for="BloodGroup" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FatherName" class="form-label small fw-bold">Father's Name</label>
                                <input asp-for="FatherName" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MotherName" class="form-label small fw-bold">Mother's Name</label>
                                <input asp-for="MotherName" class="form-control" />
                            </div>
                            <div class="col-12 mb-3">
                                <label asp-for="Address" class="form-label small fw-bold">Address</label>
                                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="@(ViewData["Source"]?.ToString() == "Students" ? "/Admin/Students" : ViewData["Source"]?.ToString() == "Teachers" ? "/Admin/Teachers" : "/Admin/ListUsers")" class="btn btn-light border px-4 me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary fw-bold px-4">
                            <i class="fa-solid fa-check me-2"></i> Create User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            function toggleSections(role) {
                if (role === "Student") {
                    $("#studentSection").slideDown();
                    $("#teacherSection").slideUp();
                } else if (role === "Teacher") {
                    $("#studentSection").slideUp();
                    $("#teacherSection").slideDown();
                } else {
                    $("#studentSection").slideUp();
                    $("#teacherSection").slideUp();
                }
            }

            var initialRole = $("#roleSelector").val();
            toggleSections(initialRole);

            $("#roleSelector").change(function () {
                toggleSections($(this).val());
            });
        });
    </script>
}