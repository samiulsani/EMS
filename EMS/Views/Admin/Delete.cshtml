@model EMS.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-danger mt-4">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-user-xmark me-2"></i> Delete User</h5>
            </div>
            <div class="card-body p-4 text-center">

                <div class="text-danger mb-3">
                    <i class="fa-solid fa-triangle-exclamation fa-4x opacity-50"></i>
                </div>

                <h4 class="text-dark fw-bold mb-2">Are you sure?</h4>
                <p class="text-muted mb-4">
                    You are about to delete user <strong>"@Model.FirstName @Model.LastName"</strong>. <br />
                    This will permanently remove their login, profile, and all related data.
                </p>

                <div class="bg-light p-3 rounded mb-4 border text-start">
                    <div class="row mb-1">
                        <div class="col-4 text-muted small fw-bold">Email:</div>
                        <div class="col-8 fw-bold">@Model.Email</div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-muted small fw-bold">Role:</div>
                        <div class="col-8">
                            @if (Model.StudentProfile != null)
                            {
                                <span>Student</span>
                            }
                            else if (Model.TeacherProfile != null)
                            {

                                <span>Teacher</span>
                            }
                            else
                            {

                                <span>Admin</span>
                            }
                        </div>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="source" value="@ViewData["Source"]" />

                    <div class="d-flex justify-content-center gap-2">
                        <a href="@(ViewData["Source"]?.ToString() == "Students" ? "/Admin/Students" : ViewData["Source"]?.ToString() == "Teachers" ? "/Admin/Teachers" : "/Admin/ListUsers")" class="btn btn-light border px-4">Cancel</a>
                        <button type="submit" class="btn btn-danger fw-bold px-4">
                            Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>