@model IEnumerable<EMS.Models.ApplicationUser>

@{
    ViewData["Title"] = "Students List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-user-graduate me-2"></i> Students</h2>
        <p class="text-muted mb-0">Manage and monitor all student records.</p>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="PromoteStudents" class="btn btn-success fw-bold px-4 shadow-sm">
            <i class="fa-solid fa-arrow-up-right-from-square me-2"></i> Promote Students
        </a>

        <a asp-action="CreateUser" asp-route-source="Students" class="btn btn-primary fw-bold px-4 shadow-sm">
            <i class="fa-solid fa-user-plus me-2"></i> Add New Student
        </a>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-4">
        <form asp-action="Students" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small text-uppercase">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control border-start-0" placeholder="Name or Roll No..." />
                    </div>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold text-muted small text-uppercase">Department</label>
                    <select name="departmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                        <option value="">-- All --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold text-muted small text-uppercase">Semester</label>
                    <select name="semesterId" class="form-select" asp-items="ViewBag.SemesterId">
                        <option value="">-- All --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold text-muted small text-uppercase">Session</label>
                    <select name="session" class="form-select" asp-items="ViewBag.Session">
                        <option value="">-- All --</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100 fw-bold">
                            <i class="fa-solid fa-filter me-1"></i> Filter
                        </button>
                        <a asp-action="Students" class="btn btn-light border w-100 text-muted" title="Reset Filters">
                            <i class="fa-solid fa-rotate-right me-1"></i> Reset
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-list me-2"></i> Student Records</h6>
        <span class="badge bg-light text-dark border">Total: @Model.Count()</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Student Info</th>
                    <th>Academic Info</th>
                    <th>Session</th>
                    <th>Contact</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-3 text-secondary border" style="width: 40px; height: 40px;">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@student.FirstName @student.LastName</div>
                                        <div class="small text-muted">Roll: <span class="text-dark fw-bold">@student.StudentProfile?.StudentRoll</span></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info mb-1 width-fit-content">
                                        @student.StudentProfile?.Department?.Name
                                    </span>

                                    <span class="small fw-bold text-dark">@student.StudentProfile?.Semester?.Name</span>
                                </div>
                            </td>
                            <td>
                                <span class="text-dark fw-bold">@student.StudentProfile?.Session</span>
                            </td>
                            <td>
                                <div class="small">
                                    <i class="fa-solid fa-phone text-muted me-1"></i> @student.PhoneNumber <br />
                                    <i class="fa-solid fa-envelope text-muted me-1"></i> @student.Email
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@student.Id" asp-route-source="Students" class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@student.Id" asp-route-source="Students" class="btn btn-sm btn-outline-warning" title="Edit Profile">
                                        <i class="fa-solid fa-user-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@student.Id" asp-route-source="Students" class="btn btn-sm btn-outline-danger" title="Delete Student">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <div class="mb-3"><i class="fa-solid fa-user-slash fa-3x opacity-25"></i></div>
                            <h5 class="fw-bold">No students found</h5>
                            <p class="mb-0">Try adjusting your search or filters.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>