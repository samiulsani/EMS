@using Microsoft.AspNetCore.Identity
@using EMS.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMS Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <style>
        /* টাইটেল সেন্টারে এবং সাইডবারের সমান উইডথ */
        .navbar-brand {
            background-color: transparent;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }
        /* প্রোফাইল লিংক হোভার এফেক্ট */
        .profile-link:hover {
            background-color: #f8f9fa;
            border-radius: 5px;
        }
    </style>
</head>
<body class="dashboard-body">

    <header class="navbar navbar-light sticky-top bg-white flex-md-nowrap p-0 border-bottom shadow-sm" style="z-index: 1030;">

        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-4 fw-bold text-primary text-center" href="#">
            EMS
        </a>

        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="w-100 d-flex justify-content-start ms-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary border-0 d-flex align-items-center">
                <i class="fa-solid fa-house me-2"></i> Home
            </a>
        </div>

        <div class="navbar-nav ms-auto px-4">
            <div class="nav-item text-nowrap d-flex align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    var user = await UserManager.GetUserAsync(User);
                    string displayName = "User";

                    // 👇 প্রোফাইল লিংক ফিক্স করা হয়েছে (সবার জন্য একই) 👇
                    string profileUrl = "/Identity/Account/Manage";

                    if (User.IsInRole("Admin"))
                    {
                        displayName = "Admin";
                    }
                    else if (user != null)
                    {
                        displayName = $"{user.FirstName} {user.LastName}";
                    }

                    <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-sm text-danger border-0 me-3 fw-bold" style="font-size: 0.9rem;">
                            <i class="fa-solid fa-right-from-bracket me-1"></i> Logout
                        </button>
                    </form>

                    <a href="@profileUrl" class="d-flex align-items-center text-decoration-none text-dark profile-link p-1" title="Manage Account">
                        <div class="rounded-circle bg-light border d-flex justify-content-center align-items-center me-2 text-secondary"
                             style="width: 38px; height: 38px;">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <div class="d-none d-sm-block">
                            <span class="fw-bold small">@displayName</span>
                        </div>
                    </a>
                }
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">

            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-4">

                    @{
                        string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                        string currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                    }

                    <ul class="nav flex-column">

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Admin" && currentAction == "Index" ? "active" : "")"
                                   asp-controller="Admin" asp-action="Index">
                                    <i class="fa-solid fa-house me-2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Departments" ? "active" : "")"
                                   asp-controller="Departments" asp-action="Index">
                                    <i class="fa-solid fa-building-columns me-2"></i> Departments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Semesters" ? "active" : "")"
                                   asp-controller="Semesters" asp-action="Index">
                                    <i class="fa-solid fa-layer-group me-2"></i> Semesters
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Courses" ? "active" : "")"
                                   asp-controller="Courses" asp-action="Index">
                                    <i class="fa-solid fa-book me-2"></i> Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Admin" && currentAction == "Students" ? "active" : "")"
                                   asp-controller="Admin" asp-action="Students">
                                    <i class="fa-solid fa-user-graduate me-2"></i> Students
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Admin" && currentAction == "Teachers" ? "active" : "")"
                                   asp-controller="Admin" asp-action="Teachers">
                                    <i class="fa-solid fa-chalkboard-user me-2"></i> Teachers
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(currentController == "ClassRoutine" ? "active" : "")"
                                   asp-controller="ClassRoutine" asp-action="Index">
                                    <i class="fa-solid fa-calendar-days me-2"></i> Class Routine
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Admin" && (currentAction == "ManageExams" || currentAction == "ExamResults") ? "active" : "")"
                                   asp-controller="Admin" asp-action="ManageExams">
                                    <i class="fa-solid fa-file-signature me-2"></i> Exam Monitoring
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Admin" && (currentAction == "ManageAssignments" || currentAction == "AssignmentSubmissions") ? "active" : "")"
                                   asp-controller="Admin" asp-action="ManageAssignments">
                                    <i class="fa-solid fa-clipboard-check me-2"></i> Assignments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Admin" && currentAction == "ManageAttendance" ? "active" : "")"
                                   asp-controller="Admin" asp-action="ManageAttendance">
                                    <i class="fa-solid fa-calendar-check me-2"></i> Attendance
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Notices" ? "active" : "")"
                                   asp-controller="Notices" asp-action="Index">
                                    <i class="fa-solid fa-bullhorn me-2"></i> Notice Board
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Admin" && currentAction == "ListUsers" ? "active" : "")"
                                   asp-controller="Admin" asp-action="ListUsers">
                                    <i class="fa-solid fa-users me-2"></i> Manage Users
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Student" && currentAction == "Index" ? "active" : "")"
                                   asp-controller="Student" asp-action="Index">
                                    <i class="fa-solid fa-house me-2"></i> My Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Student" && currentAction == "MyCourses" ? "active" : "")"
                                   asp-controller="Student" asp-action="MyCourses">
                                    <i class="fa-solid fa-book-open me-2"></i> My Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Student" && (currentAction == "Assignments" || currentAction == "SubmitAssignment") ? "active" : "")"
                                   asp-controller="Student" asp-action="Assignments">
                                    <i class="fa-solid fa-list-check me-2"></i> Assignments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Student" && currentAction == "MyAttendance" ? "active" : "")"
                                   asp-controller="Student" asp-action="MyAttendance">
                                    <i class="fa-solid fa-chart-pie me-2"></i> Attendance Report
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Student" && currentAction == "MyClassRoutine" ? "active" : "")"
                                   asp-controller="Student" asp-action="MyClassRoutine">
                                    <i class="fa-solid fa-calendar-days me-2"></i> Class Routine
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Student" && currentAction == "MyResults" ? "active" : "")"
                                   asp-controller="Student" asp-action="MyResults">
                                    <i class="fa-solid fa-square-poll-vertical me-2"></i> Results
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Student" && (currentAction == "Notices" || currentAction == "NoticeDetails") ? "active" : "")"
                                   asp-controller="Student" asp-action="Notices">
                                    <i class="fa-solid fa-bullhorn me-2"></i> Notice Board
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Teacher"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Teacher" && currentAction == "Index" ? "active" : "")"
                                   asp-controller="Teacher" asp-action="Index">
                                    <i class="fa-solid fa-house me-2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Teacher" && (currentAction == "MyCourses" || currentAction == "EnrolledStudents") ? "active" : "")"
                                   asp-controller="Teacher" asp-action="MyCourses">
                                    <i class="fa-solid fa-book-open me-2"></i> My Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Teacher" && (currentAction == "MyStudents" || currentAction == "StudentDetails") ? "active" : "")"
                                   asp-controller="Teacher" asp-action="MyStudents">
                                    <i class="fa-solid fa-user-graduate me-2"></i> My Students
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Teacher" && currentAction == "Attendance" ? "active" : "")"
                                   asp-controller="Teacher" asp-action="Attendance">
                                    <i class="fa-solid fa-check-double me-2"></i> Attendance
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Teacher" && currentAction == "MyClassSchedule" ? "active" : "")"
                                   asp-controller="Teacher" asp-action="MyClassSchedule">
                                    <i class="fa-solid fa-calendar-day me-2"></i> My Schedule
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Teacher" && (currentAction == "ManageExams" || currentAction == "CreateExam" || currentAction == "InputMarks") ? "active" : "")"
                                   asp-controller="Teacher" asp-action="ManageExams">
                                    <i class="fa-solid fa-file-pen me-2"></i> Exams
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Assignments" ? "active" : "")"
                                   asp-controller="Assignments" asp-action="Index">
                                    <i class="fa-solid fa-clipboard-list me-2"></i> Assignments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Teacher" && (currentAction == "Notices" || currentAction == "NoticeDetails") ? "active" : "")"
                                   asp-controller="Teacher" asp-action="Notices">
                                    <i class="fa-solid fa-bullhorn me-2"></i> Notices
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>