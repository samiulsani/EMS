@model EMS.Models.ViewModels.Teacher.TeacherDashboardViewModel

@{
    ViewData["Title"] = "Teacher Dashboard";
}

<h1 class="h3 mb-4">Welcome, @Model.Name! 👨‍🏫</h1>

<div class="row">
    <div class="col-md-5">
        <div class="card shadow-sm border-info">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fa-solid fa-user-tie me-2"></i> My Profile</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <i class="fa-solid fa-chalkboard-user fa-4x text-secondary"></i>
                </div>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Designation</dt>
                    <dd class="col-sm-8 fw-bold text-primary">@Model.Designation</dd>

                    <dt class="col-sm-4">Department</dt>
                    <dd class="col-sm-8">@Model.Department</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8 text-break">@Model.Email</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.Phone</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-7">
        <div class="row g-3 mb-4">

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fa-solid fa-bullhorn me-2"></i> Notice Board</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Notices.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var notice in Model.Notices)
                            {
                                <a asp-action="NoticeDetails" asp-route-id="@notice.Id" class="list-group-item list-group-item-action flex-column align-items-start">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1 text-primary fw-bold">@notice.Title</h6>
                                        <small class="text-muted">@notice.PostedDate.ToString("dd MMM")</small>
                                    </div>
                                    <p class="mb-1 small text-secondary">
                                        @(notice.Description.Length > 80 ? notice.Description.Substring(0, 80) + "..." : notice.Description)
                                    </p>
                                    <small class="text-info">Click for details</small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <p class="mb-0">No notices at the moment.</p>
                        </div>
                    }
                </div>
                <div class="card-footer text-center bg-white">
                    <a asp-action="Notices" class="btn btn-sm btn-outline-secondary">View All Notices</a>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card text-center shadow-sm h-100 border-primary">
                    <div class="card-body">
                        <h5 class="card-title text-primary"><i class="fa-solid fa-book-open"></i> Assigned Courses</h5>
                        <p class="display-4 fw-bold my-2">@Model.TotalAssignedCourses</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card text-center shadow-sm h-100 border-success">
                    <div class="card-body">
                        <h5 class="card-title text-success"><i class="fa-solid fa-check-double"></i> Attendance</h5>
                        <p class="card-text mt-3">Take attendance for today's classes.</p>
                        <a href="#" class="btn btn-sm btn-outline-success">Take Attendance (Soon)</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">My Course List</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th>Course Code</th>
                            <th>Title</th>
                            <th>Semester</th>
                            <th>Credits</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.AssignedCourses.Any())
                        {
                            @foreach (var course in Model.AssignedCourses)
                            {
                                <tr>
                                    <td class="fw-bold text-primary">@course.CourseCode</td>
                                    <td>@course.Title</td>
                                    <td><span class="badge bg-info text-dark">@course.Semester?.Name</span></td>
                                    <td>@course.Credits</td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fa-solid fa-arrow-right"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fa-solid fa-circle-exclamation me-2"></i> You have not been assigned any courses yet.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>