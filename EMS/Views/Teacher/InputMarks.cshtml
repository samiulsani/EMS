@model EMS.Models.ViewModels.Teacher.ExamMarksViewModel

@{
    ViewData["Title"] = "Input Marks";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="fa-solid fa-pen-to-square"></i> Input Marks</h2>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-0 text-dark">@Model.ExamTitle</h5>
                <small class="text-muted">Course: @Model.CourseTitle</small>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-warning text-dark fs-6">Total Marks: @Model.TotalMarks</span>
                <div class="small text-muted mt-1">Date: @Model.ExamDate.ToString("dd MMM yyyy")</div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="InputMarks" method="post">
            <input type="hidden" asp-for="ExamId" />
            <input type="hidden" asp-for="TotalMarks" /> <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-white border-bottom">
                        <tr>
                            <th>Roll No</th>
                            <th>Student Name</th>
                            <th style="width: 200px;">Marks Obtained</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            <tr>
                                <input type="hidden" asp-for="Students[i].StudentId" />
                                <input type="hidden" asp-for="Students[i].StudentName" />
                                <input type="hidden" asp-for="Students[i].RollNo" />

                                <td class="fw-bold">@Model.Students[i].RollNo</td>
                                <td>@Model.Students[i].StudentName</td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" step="0.5" min="0" max="@Model.TotalMarks"
                                               asp-for="Students[i].MarksObtained" class="form-control text-center fw-bold" />
                                        <span class="input-group-text">/ @Model.TotalMarks</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                <a asp-action="ManageExams" class="btn btn-secondary me-md-2">Cancel</a>
                <button type="submit" class="btn btn-success px-4">
                    <i class="fa-solid fa-save"></i> Save Marks
                </button>
            </div>
        </form>
    </div>
</div>