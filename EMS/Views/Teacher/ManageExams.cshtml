@model IEnumerable<EMS.Models.Exam>

@{
    ViewData["Title"] = "Manage Exams";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="fa-solid fa-file-pen"></i> Manage Exams</h2>
    <a asp-action="CreateExam" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Schedule New Exam
    </a>
</div>

<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th>Exam Title</th>
                    <th>Course</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Marks</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Title</td>
                            <td>
                                @item.Course.CourseCode <br />
                                <small class="text-muted">@item.Course.Semester?.Name</small>
                            </td>
                            <td>@item.ExamDate.ToString("dd MMM yyyy")</td>
                            <td><span class="badge bg-info text-dark">@item.ExamType</span></td>
                            <td>@item.TotalMarks</td>
                            <td class="text-end">
                                <a asp-action="InputMarks" asp-route-examId="@item.Id" class="btn btn-sm btn-outline-primary" title="Input/Edit Marks">
                                    <i class="fa-solid fa-pen-to-square"></i> Input Marks
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">
                            <i class="fa-regular fa-calendar-xmark fa-2x mb-3"></i>
                            <p class="mb-0">No exams scheduled yet.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>