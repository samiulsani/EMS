@model EMS.Models.Exam

@{
    ViewData["Title"] = "Schedule Exam";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-calendar-plus me-2"></i> Schedule New Exam</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="CreateExam">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="CourseId" class="form-label fw-bold text-muted">Select Course</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-book"></i></span>
                            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId">
                                <option value="">-- Select Course --</option>
                            </select>
                        </div>
                        <span asp-validation-for="CourseId" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-7 mb-3">
                            <label asp-for="Title" class="form-label fw-bold text-muted">Exam Title</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-heading"></i></span>
                                <input asp-for="Title" class="form-control" placeholder="e.g. Midterm Exam, Quiz 1" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="col-md-5 mb-3">
                            <label asp-for="ExamType" class="form-label fw-bold text-muted">Exam Type</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-list-check"></i></span>
                                <select asp-for="ExamType" class="form-select" asp-items="Html.GetEnumSelectList<EMS.Models.ExamType>()"></select>
                            </div>
                            <span asp-validation-for="ExamType" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExamDate" class="form-label fw-bold text-muted">Exam Date</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-regular fa-calendar-days"></i></span>
                                <input asp-for="ExamDate" class="form-control" type="date" />
                            </div>
                            <span asp-validation-for="ExamDate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="TotalMarks" class="form-label fw-bold text-muted">Total Marks</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-star-half-stroke"></i></span>
                                <input asp-for="TotalMarks" class="form-control" type="number" placeholder="e.g. 20, 50" />
                            </div>
                            <span asp-validation-for="TotalMarks" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="ManageExams" class="btn btn-light border px-4 me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary fw-bold px-4">
                            <i class="fa-solid fa-check me-2"></i> Schedule Exam
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}