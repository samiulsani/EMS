@model IEnumerable<EMS.Models.ApplicationUser>

@{
    ViewData["Title"] = "Enrolled Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold mb-1"><i class="fa-solid fa-users-rectangle me-2"></i> Enrolled Students</h2>
        <p class="text-muted mb-0">
            Course: <span class="fw-bold text-dark">@ViewBag.CourseTitle</span>
            <span class="badge bg-light text-dark border ms-2">@ViewBag.CourseCode</span>
        </p>
    </div>
    <div>
        <a asp-action="MyCourses" class="btn btn-outline-secondary shadow-sm">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to Courses
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow-sm border-start border-4 border-info h-100">
            <div class="card-body d-flex align-items-center">
                <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3 text-info">
                    <i class="fa-solid fa-user-graduate fa-2x"></i>
                </div>
                <div>
                    <h6 class="text-muted text-uppercase small fw-bold mb-1">Total Students</h6>
                    <h3 class="mb-0 fw-bold text-dark">@Model.Count()</h3>
                </div>
                <div class="ms-auto text-end">
                    <span class="badge bg-light text-muted border">
                        <i class="fa-solid fa-building-columns me-1"></i> @ViewBag.Department
                    </span>
                    <span class="badge bg-light text-muted border ms-1">
                        <i class="fa-solid fa-layer-group me-1"></i> @ViewBag.Semester
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-list me-2"></i> Student List</h6>

    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Student Info</th>
                    <th>ID / Registration</th>
                    <th>Session</th>
                    <th>Contact</th>
                    <th class="text-end pe-4">Profile</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-3 text-secondary border" style="width: 40px; height: 40px;">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@student.FirstName @student.LastName</div>
                                        <div class="small text-muted">Roll: <span class="fw-bold text-dark">@student.StudentProfile?.StudentRoll</span></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="small text-muted text-uppercase fw-bold">Reg:</span>
                                <span class="fw-bold text-dark">@student.StudentProfile?.RegistrationNo</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary">
                                    @student.StudentProfile?.Session
                                </span>
                            </td>
                            <td>
                                <div class="small">
                                    <i class="fa-solid fa-phone text-muted me-1" title="Phone"></i> @student.PhoneNumber <br />
                                    <i class="fa-solid fa-envelope text-muted me-1" title="Email"></i> @student.Email
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="StudentDetails" asp-route-id="@student.Id" class="btn btn-sm btn-outline-info shadow-sm" title="View Full Profile">
                                    <i class="fa-solid fa-id-card me-1"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <div class="mb-3"><i class="fa-solid fa-user-slash fa-3x opacity-25"></i></div>
                            <h5 class="fw-bold">No students found</h5>
                            <p class="mb-0">There are no students enrolled in this course/semester yet.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>